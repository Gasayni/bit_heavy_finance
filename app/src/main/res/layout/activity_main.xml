<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#131517"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="50"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text=""
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="10sp"
            android:layout_height="wrap_content" />

    </TableRow>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="50"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_money_on_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="@color/GAS_orange"
            android:textStyle="bold"
            android:text="6000" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/on_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="На сегодня" />
    </TableRow>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="30"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="0sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="70" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Не волнуйтесь" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="true"
            android:paddingLeft="5sp"
            android:text=""
            android:textColor="@color/GAS_orange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:hint="0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="270">

        <TableLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_seven"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/GAS_grey"
                    android:textColor="@color/GAS_grey2"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="7"
                    android:textSize="26sp"/>

                <Button
                    android:id="@+id/btn_eight"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textColor="@color/GAS_grey2"
                    android:textSize="26sp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/GAS_grey"/>

                <Button
                    android:id="@+id/btn_nine"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textColor="@color/GAS_grey2"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="26sp"
                    android:background="@color/GAS_grey"/>

                <Button
                    android:id="@+id/btn_backspace"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="←"
                    android:textColor="@color/GAS_grey2"
                    android:textSize="40sp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/GAS_grey"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TableLayout
                    android:layout_width="0sp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_four"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>

                        <Button
                            android:id="@+id/btn_five"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>

                        <Button
                            android:id="@+id/btn_six"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="6"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_one"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>

                        <Button
                            android:id="@+id/btn_two"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>

                        <Button
                            android:id="@+id/btn_three"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/GAS_grey"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_zero"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:background="@color/GAS_grey"/>



                        <Button
                            android:id="@+id/btn_point"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text=","
                            android:textColor="@color/GAS_grey2"
                            android:textSize="26sp"
                            android:layout_marginEnd="1dp"
                            android:background="@color/GAS_grey"/>
                    </TableRow>

                </TableLayout>
                <Button
                    android:id="@+id/btn_enter"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/GAS_orange"
                    android:textColor="@color/GAS_grey2"
                    android:gravity="bottom"
                    android:textSize="70sp"
                    android:text="↵" />
            </TableRow>


        </TableLayout>
    </TableRow>
</TableLayout>